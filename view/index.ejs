<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head.ejs") %>
</head>
<body>
  <header>
    <h1>Blogg</h1>
    <%- include("./partials/nav.ejs") %>
  </header>
  <section class="blogs content">
    <h1>All Blogs</h1>
    <% if(blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
      <div class="posts">
        <h1> <%= blog.name %> </h1>
        <p> <%= blog.snippet%> </p>
      </div>
      <% }) %>
    <% } else { %>
      <p>There's no blog post here</p>
    <% } %>
  </section>
  <%- include("./partials/footer.ejs") %>
</body>
</html>